{
  "plugin": "custom",
  "pluginConfig": {
    "invoke_interval": "10s",
    "timeout": "80s",
    "max_output_length": 50000,
    "concurrency": 1
  },
  "source": "health-monitor",
  "metricsReporting": true,
  "rules": [
    {
      "type": "temporary",
      "reason": "KubeletUnresponsive",
      "path": "/usr/bin/python",
      "args": [
        "/home/kubernetes/node-problem-detector/config/plugin/health-monitor.py",
        "--component=kubelet",
        "--timeout-seconds=10",
        "--cool-down-seconds=60",
        "--use-remedy=false",
      ],
      "timeout": "80s"
    }
  ]
}
