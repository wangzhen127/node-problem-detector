{
  "plugin": "custom",
  "pluginConfig": {
    "invoke_interval": "10s",
    "timeout": "130s",
    "max_output_length": 50000,
    "concurrency": 1
  },
  "source": "health-monitor",
  "metricsReporting": true,
  "rules": [
    {
      "type": "temporary",
      "reason": "ContainerRuntimeUnresponsive",
      "path": "/usr/bin/python",
      "args": [
        "/home/kubernetes/node-problem-detector/config/plugin/health-monitor.py",
        "--component=container-runtime"
        "--timeout-seconds=60",
        "--cool-down-seconds=120",
        "--use-remedy=false",
      ],
      "timeout": "130s"
    }
  ]
},
